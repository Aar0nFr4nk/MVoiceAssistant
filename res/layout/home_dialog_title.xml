<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.iflytek.viafly.homepage.LxBackgroundImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/viafly_bg_mainpage" android:scaleType="fitStart" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:orientation="horizontal" android:id="@id/title_layout" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/title_back" android:layout_width="@dimen/title_image_size" android:layout_height="@dimen/title_image_size" android:layout_marginLeft="@dimen/home_dialog_margin" android:src="@drawable/home_dialog_title_close_bg" android:layout_centerVertical="true" />
            <TextView android:textSize="@dimen/title_size" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:layout_centerInParent="true" />
            <ImageView android:id="@id/dialog_switch" android:layout_width="@dimen/title_image_size" android:layout_height="@dimen/title_image_size" android:layout_marginRight="@dimen/home_dialog_margin" android:src="@drawable/home_dialog_title_speak_sound_bg" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <ListView android:id="@id/id_listview_list" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:listSelector="@android:color/transparent" android:transcriptMode="alwaysScroll" />
    </LinearLayout>
</FrameLayout>